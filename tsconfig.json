{
  "compilerOptions": {
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "strict": false,
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*", "config/*"]
    }
  },
  "types": ["node", "jest"],
  "include": ["src/**/*.js", "src/**/*", "config/*"],
  "exclude": ["node_modules"]
}
